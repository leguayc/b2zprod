{% extends 'backoffice.html.twig' %}

{% block title %}BlogPost index{% endblock %}

{% block page %}
    <h1>BlogPost index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Text</th>
                <th>Creation Date</th>
                <th>Form Link</th>
                <th>Locale</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for blog_post in blog_posts %}
            <tr>
                <td>{{ blog_post.id }}</td>
                <td>{{ blog_post.title }}</td>
                <td>{{ blog_post.text }}</td>
                <td>{{ blog_post.creationdate ? blog_post.creationdate|date('Y-m-d') : '' }}</td>
                <td>{{ blog_post.formLink }}</td>
                <td>{{ blog_post.locale }}</td>
                <td>
                    <a href="{{ path('app_blog_post_show', {'id': blog_post.id}) }}">show</a>
                    <a href="{{ path('app_blog_post_edit', {'id': blog_post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_blog_post_new') }}">Create new</a>
{% endblock %}
