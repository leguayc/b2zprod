{% extends 'backoffice.html.twig' %}

{% block title %}BlogPost{% endblock %}

{% block page %}
    <h1>BlogPost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog_post.id }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="/uploads/posts/{{ blog_post.image }}" alt="News image" width="300" /></td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog_post.title }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ blog_post.text }}</td>
            </tr>
            <tr>
                <th>Creationdate</th>
                <td>{{ blog_post.creationdate ? blog_post.creationdate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ blog_post.locale }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blog_post_index') }}">back to list</a>

    <a href="{{ path('app_blog_post_edit', {'id': blog_post.id}) }}">edit</a>

    {{ include('blog_post/_delete_form.html.twig') }}
{% endblock %}
