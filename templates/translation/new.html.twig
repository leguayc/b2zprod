{% extends 'backoffice.html.twig' %}

{% block title %}Traductions{% endblock %}

{% block page %}
    <h1>Ajouter une langue</h1>

    <form method="POST">
        <table class="table">
            <thead>
                <tr>
                    <th>Langues</th>
                    <th>FR</th>
                    <th>
                        <select name="newLang" id="newLang-select">
                            {% for key, value in langs %}
                                <option value="{{ key }}">{{ value }}</option>
                            {% endfor %}
                        </select>
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for key, value in translations['fr'] %}
                <tr>
                    <td>{{ key }}</td>
                    <td>{{ value }}</td>
                    <td><textarea name="{{key}}"></textarea></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <button class="btn">Sauvegarder</button>
    </form>

    <a href="{{ path('app_translation_index') }}">Retour</a>
{% endblock %}
