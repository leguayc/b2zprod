{% extends 'backoffice.html.twig' %}

{% block title %}Partner{% endblock %}

{% block page %}
    <h1>Partner</h1>

    <div class="table-contain">
        <div class="table-scroll">

            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ partner.id }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><img src="/uploads/partners/{{ partner.image }}" alt="Logo of {{ partner.name }}" width="300" /></td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ partner.name }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="contain-button">

        <a href="{{ path('app_partner_index') }}">back to list</a>

        <a href="{{ path('app_partner_edit', {'id': partner.id}) }}">edit</a>

        {{ include('partner/_delete_form.html.twig') }}

    </div>
{% endblock %}
